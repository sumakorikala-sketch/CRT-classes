class Family implements Runnable
{
    String resource1="Tv";
    String resource2="PlayStation";
    public void run()
    {
        String name=Thread.currentThread().getName();
        if(name.equals("CR")==true)
        {
            NavyaAccquiredResource();
        }
        else{
            chinnuAccquiredResource();
        }
    }
    void NavyaAccquiredResource()
    {
        synchronized(resource2)
        {
            try{
                System.out.println("suma accquired the playstation");
                Thread.sleep(2000);
                synchronized(resource1)
                {
                    System.out.println("suma accquired tv");
                    Thread.sleep(1000);
                }
            }
            catch(Exception e)
            {
                System.out.println("suma Failed");
            }
        }
    }
    void chinnuAccquiredResource()
    {
        synchronized(resource1)
        {
            try{
                System.out.println("sarin accquired the tv");
                Thread.sleep(2000);
                synchronized(resource2)
                {
                    System.out.println("sarin accquired the playstation");
                    Thread.sleep(1000);
                }
            }
            catch(Exception e)
            {
                System.out.println("sarin Failed");
            }
        }
    }
}
    public class ExampleForDeadLock {
        public static void main(String[] args) {
            Family f =new Family();
            Thread t1=new Thread(f);
            Thread t2=new Thread(f);
            t1.setName("suma");
            t2.setName("sarin");
            t1.start();
            t2.start();


        }
    
}
